<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.szip.sleepee">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.NETWORK_PROVIDER" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />
    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_PRIVILEGED" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />

    <uses-permission android:name="android.permission.BLUETOOTH_PRIVILEGED" />

    <uses-permission android:name="android.permission.READ_LOGS" />

    <application
        android:name=".MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/icon_sleepee"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/icon_sleepee_c"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Controller.MainActivity"
            android:screenOrientation="portrait"
            android:configChanges="locale|layoutDirection"/>
        <activity android:name=".Controller.WelcomeActivity"
            android:screenOrientation="portrait"
            android:configChanges="locale|layoutDirection">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <service
            android:name=".Service.BleService"
            android:enabled="true"
            android:exported="true" />
        <service
            android:name=".Service.DfuService"
            android:exported="true">
            <intent-filter>
                <action android:name="no.nordicsemi.android.action.DFU_UPLOAD" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </service>

        <activity
            android:name=".Controller.LoginActivity"
            android:theme="@style/DefaultCityPickerTheme"
            android:screenOrientation="portrait"
            android:configChanges="locale|layoutDirection"/>
        <activity
            android:name=".Controller.ForgetPasswordActivity"
            android:theme="@style/DefaultCityPickerTheme"
            android:screenOrientation="portrait"
            android:configChanges="locale|layoutDirection"/>
        <activity
            android:name=".Controller.RegisterActivity"
            android:theme="@style/DefaultCityPickerTheme"
            android:screenOrientation="portrait"
            android:configChanges="locale|layoutDirection"/>
        <activity android:name=".Controller.FindDeviceActivity"
            android:screenOrientation="portrait"
            android:configChanges="locale|layoutDirection"/>
        <activity android:name=".Controller.HelpCentreActivity"
            android:screenOrientation="portrait"
            android:configChanges="locale|layoutDirection"/>
        <activity android:name=".Controller.FAQActivity"
            android:screenOrientation="portrait"
            android:configChanges="locale|layoutDirection"/>
        <activity android:name=".Controller.MyDeviceActivity"
            android:screenOrientation="portrait"
            android:configChanges="locale|layoutDirection"/>
        <activity android:name=".Controller.UpdataFirmwareActivity"
            android:screenOrientation="portrait"
            android:configChanges="locale|layoutDirection"/>
        <activity android:name=".Controller.UserInfoActivity"
            android:screenOrientation="portrait"
            android:configChanges="locale|layoutDirection"/>
        <activity android:name=".Controller.ChangePasswordActivity"
            android:screenOrientation="portrait"
            android:configChanges="locale|layoutDirection"/>
        <activity android:name=".Controller.BindPhoneOrMailActivity"
            android:screenOrientation="portrait"
            android:configChanges="locale|layoutDirection"/>
        <activity android:name=".Controller.PersonInfoActivity"
            android:screenOrientation="portrait"
            android:configChanges="locale|layoutDirection"/>
        <activity android:name=".Controller.RealTimeActivity"
            android:screenOrientation="portrait"
            android:configChanges="locale|layoutDirection"/>
        <activity android:name=".Controller.ClockSettingActivity"
            android:screenOrientation="portrait"
            android:configChanges="locale|layoutDirection"/>
        <activity android:name=".Controller.ClockRunningActivity"
            android:screenOrientation="portrait"
            android:configChanges="locale|layoutDirection"/>

        <receiver android:name=".Broadcat.UtilBroadcat">
            <intent-filter>
                <action android:name="com.example.alarmandnotice_android.DCAT" />
                <action android:name="android.bluetooth.adapter.action.STATE_CHANGED" />
            </intent-filter>
        </receiver>

        <activity android:name=".Controller.SleepReportInDayActivity"
            android:screenOrientation="portrait"
            android:configChanges="locale|layoutDirection"/>
        <activity android:name=".Controller.FeedbackActivity"
            android:screenOrientation="portrait"
            android:configChanges="locale|layoutDirection"/>
        <activity android:name=".Controller.AboutActivity"
            android:screenOrientation="portrait"
            android:configChanges="locale|layoutDirection"/>
        <activity android:name=".Controller.NotificationActivity"
            android:screenOrientation="portrait"
            android:configChanges="locale|layoutDirection"></activity>
    </application>

</manifest>